{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "incremental": true,
        "tsBuildInfoFile": "build/.tsbuildinfo",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "outDir": "build/npm",
        "rootDirs": [
            "src/main/ts"
        ]
    },
    "include": [
        "src/main"
    ]
}
